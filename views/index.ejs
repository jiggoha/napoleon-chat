<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>

  <body>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
  
    <script src="/socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      var socket = io(); // defaults to connecting to the URL of the 

      $('form').submit(function() {    
        socket.emit('chat message', $('#m').val());
        $('#m').val('');
        return false;
      });

      socket.on('add previous messages', function(messages) {
        for (i = 0; i < messages.length; i++) {
          $('#messages').append($('<li>').text(messages[i]));
        }
      })

      socket.on('prompt username', function(username) {
        var username = prompt("What is your name?");
        socket.emit('add username', username);
      })

      socket.on('announce new user', function(username) {
        $('#messages').append($('<li>').text(username + " joined"));
      })
      
      socket.on('chat message', function(username, msg) {
        $('#messages').append($('<li>').text(username + ": " + msg));
      });

      socket.on('user disconnected', function(username) {
        $('#messages').append($('<li>').text(username + " left"));
      })
    </script>
  </body>

</html>